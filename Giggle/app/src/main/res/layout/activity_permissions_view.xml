<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <TextView
        android:id="@+id/file_or_dir_name"
        style="@style/HeaderString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header.file_name" />

    <ListView
        android:id="@+id/permissioned_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/file_or_dir_name"
        android:layout_alignStart="@+id/file_or_dir_name"
        android:layout_below="@+id/file_or_dir_name" />

</RelativeLayout>
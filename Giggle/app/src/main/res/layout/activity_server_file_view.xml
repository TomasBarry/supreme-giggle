<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <TextView
        android:id="@+id/server_files_header"
        style="@style/HeaderString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header.server_files" />

    <ListView
        android:id="@+id/server_files_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/server_files_header"
        android:layout_alignStart="@+id/server_files_header"
        android:layout_below="@+id/server_files_header" />

</RelativeLayout>